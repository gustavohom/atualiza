<%- include('partials/header', { pageTitle: pageTitle, activePage: activePage, contactInfo: contactInfo }) %>

<div class="container mx-auto px-6 py-16 lg:py-24" data-aos="fade-in">
    <h1 class="text-4xl lg:text-5xl font-bold font-heading text-center mb-12 lg:mb-16 text-atualiza-dark">Entre em Contato</h1>

     <% if (successMessage) { %>
        <div class="bg-green-100 border-l-4 border-green-500 text-green-700 p-4 mb-8 rounded-md shadow-md relative" role="alert" data-aos="zoom-in">
            <strong class="font-bold block sm:inline">Sucesso!</strong>
            <span class="block sm:inline"> <%= successMessage %></span>
        </div>
    <% } %>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-12 lg:gap-16">
        <!-- Informações de Contato -->
        <div class="bg-white p-8 rounded-lg shadow-xl" data-aos="fade-right">
            <h2 class="text-2xl lg:text-3xl font-bold font-heading mb-6 text-atualiza-dark">Nossos Contatos</h2>
            <div class="space-y-5 text-lg text-gray-700">
                <p class="flex items-center">
                     <svg class="w-5 h-5 mr-3 text-atualiza-primary flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path></svg>
                    <a href="tel:<%= contactInfo.phone %>" class="hover:text-atualiza-primary transition duration-300"><%= contactInfo.phone %></a>
                </p>
                <p class="flex items-center">
                    <svg class="w-5 h-5 mr-3 text-green-500 flex-shrink-0" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512"><path fill="currentColor" d="M380.9 97.1C339 55.1 283.2 32 223.9 32c-122.4 0-222 99.6-222 222 0 39.1 10.2 77.3 29.6 111L0 480l117.7-30.9c32.4 17.7 68.9 27 106.1 27h.1c122.3 0 224.1-99.6 224.1-222 0-59.3-25.2-115-67.1-157zm-157 341.6c-33.8 0-67.6-9.5-97.2-27.2l-7.1-4.2-72.1 18.9L70 357.5l-4.5-7.4C45.8 318.9 32 281.2 32 241.1c0-101.7 82.8-184.5 184.6-184.5 49.3 0 95.6 19.2 130.4 54.1 34.8 34.9 56.2 81.2 56.1 130.5 0 101.8-84.9 184.6-186.6 184.6zm101.2-138.2c-5.5-2.8-32.8-16.2-37.9-18-5.1-1.9-8.8-2.8-12.5 2.8-3.7 5.6-14.3 18-17.6 21.8-3.2 3.7-6.5 4.2-12 1.4-32.6-16.3-54-29.1-75.5-66-5.7-9.8 5.7-9.1 16.3-30.3 1.8-3.7 .9-6.9-.5-9.7-1.4-2.8-12.5-30.1-17.1-41.2-4.5-10.8-9.1-9.3-12.5-9.5-3.2-.2-6.9-.2-10.6-.2-3.7 0-9.7 1.4-14.8 6.9-5.1 5.6-19.4 19-19.4 46.3 0 27.3 19.9 53.7 22.6 57.4 2.8 3.7 39.1 59.7 94.8 83.8 35.2 15.2 49 16.5 66.6 13.9 10.7-1.6 32.8-13.4 37.4-26.4 4.6-13 4.6-24.1 3.2-26.4-1.3-2.5-5-3.9-10.5-6.6z"/></svg>
                    <a href="https://wa.me/<%= contactInfo.whatsapp %>?text=Olá! Visitei o site e gostaria de um orçamento." target="_blank" class="hover:text-green-600 transition duration-300">Fale pelo WhatsApp</a>
                </p>
                <p class="flex items-center">
                    <svg class="w-5 h-5 mr-3 text-atualiza-primary flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path></svg>
                    <a href="mailto:<%= contactInfo.email %>" class="hover:text-atualiza-primary transition duration-300"><%= contactInfo.email %></a>
                </p>
                 <p class="flex items-center">
                    <svg class="w-5 h-5 mr-3 text-pink-600 flex-shrink-0" fill="currentColor" viewBox="0 0 448 512"><path d="M224.1 141c-63.6 0-114.9 51.3-114.9 114.9s51.3 114.9 114.9 114.9S339 319.5 339 255.9 287.7 141 224.1 141zm0 189.6c-41.1 0-74.7-33.5-74.7-74.7s33.5-74.7 74.7-74.7 74.7 33.5 74.7 74.7-33.6 74.7-74.7 74.7zm146.4-194.3c0 14.9-12 26.8-26.8 26.8-14.9 0-26.8-12-26.8-26.8s12-26.8 26.8-26.8 26.8 12 26.8 26.8zm76.1 27.2c-1.7-35.9-9.9-67.7-36.2-93.9-26.2-26.2-58-34.4-93.9-36.2-37-2.1-147.9-2.1-184.9 0-35.8 1.7-67.6 9.9-93.9 36.1s-34.4 58-36.2 93.9c-2.1 37-2.1 147.9 0 184.9 1.7 35.9 9.9 67.7 36.2 93.9s58 34.4 93.9 36.2c37 2.1 147.9 2.1 184.9 0 35.9-1.7 67.7-9.9 93.9-36.2 26.2-26.2 34.4-58 36.2-93.9 2.1-37 2.1-147.8 0-184.8zM398.8 388c-7.8 19.6-22.9 34.7-42.6 42.6-29.5 11.7-99.5 9-132.1 9s-102.7 2.6-132.1-9c-19.6-7.8-34.7-22.9-42.6-42.6-11.7-29.5-9-99.5-9-132.1s-2.6-102.7 9-132.1c7.8-19.6 22.9-34.7 42.6-42.6 29.5-11.7 99.5-9 132.1-9s102.7-2.6 132.1 9c19.6 7.8 34.7 22.9 42.6 42.6 11.7 29.5 9 99.5 9 132.1s2.7 102.7-9 132.1z"/></svg>
                    <a href="https://instagram.com/<%= contactInfo.instagram %>" target="_blank" class="hover:text-pink-700 transition duration-300">@<%= contactInfo.instagram %></a>
                </p>
                <% if (contactInfo.address) { %>
                    <p class="flex items-start"> 
                         <svg class="w-5 h-5 mr-3 text-atualiza-primary flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path></svg>
                        <span><%= contactInfo.address %></span>

                    </p>
                <% } %>
            </div>
             <div class="mt-8 rounded-lg overflow-hidden">
                <iframe src="https://www.google.com/maps/place/Posto+Ipiranga/@-18.2394423,-43.6130234,18.58z/data=!4m6!3m5!1s0xaeb9b261514f27:0x82b7dc31799cea15!8m2!3d-18.2396888!4d-43.6123833!16s%2Fg%2F1tmqhfvm?entry=ttu&g_ep=EgoyMDI1MDQyMy4wIKXMDSoASAFQAw%3D%3D" width="100%" height="300" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
            </div> 
        </div>

        <!-- Formulário de Contato -->
        <div class="bg-white p-8 rounded-lg shadow-xl" data-aos="fade-left">
             <h2 class="text-2xl lg:text-3xl font-bold font-heading mb-6 text-atualiza-dark">Ou envie uma mensagem</h2>
            <form action="/enviar-contato" method="POST" class="space-y-6">
                <div>
                    <label for="nome" class="block text-gray-700 font-semibold mb-2">Nome Completo</label>
                    <input type="text" id="nome" name="nome" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-atualiza-primary focus:border-transparent transition duration-300" required>
                </div>
                <div>
                    <label for="email" class="block text-gray-700 font-semibold mb-2">Email</label>
                    <input type="email" id="email" name="email" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-atualiza-primary focus:border-transparent transition duration-300" required>
                </div>
                 <div>
                    <label for="telefone" class="block text-gray-700 font-semibold mb-2">Telefone / WhatsApp</label>
                    <input type="tel" id="telefone" name="telefone" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-atualiza-primary focus:border-transparent transition duration-300">
                </div>
                <div>
                    <label for="mensagem" class="block text-gray-700 font-semibold mb-2">Sua Mensagem</label>
                    <textarea id="mensagem" name="mensagem" rows="5" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-atualiza-primary focus:border-transparent transition duration-300" required></textarea>
                </div>
                <div>
                    <button type="submit" class="w-full bg-atualiza-primary hover:bg-opacity-90 text-white font-bold py-3 px-6 rounded-lg transition duration-300 text-lg shadow hover:shadow-md">
                        Enviar Mensagem
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<%- include('partials/footer', { contactInfo: contactInfo }) %>